<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hitamabu"
    tools:context=".UpdateProfile">

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_user_profile_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your Name  "
        android:textColor="#CFCBCB"
        android:background="@drawable/custom_edit_abu"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile" />
    <TextView
        android:id="@+id/tv1"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:layout_marginEnd="16dp"
        android:text="Nama  "
        app:layout_constraintBottom_toTopOf="@id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_emial"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="52dp"
        android:background="@drawable/custom_edit_abu"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your Email "
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_nama"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv2"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:layout_marginEnd="16dp"
        android:text="Email  "
        app:layout_constraintBottom_toTopOf="@id/et_emial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="52dp"
        android:background="@drawable/custom_edit_abu"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your Password "
        android:textColor="#CFCBCB"
        app:layout_constraintTop_toBottomOf="@id/et_emial"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:layout_marginEnd="16dp"
        android:text="Password  "
        app:layout_constraintBottom_toTopOf="@id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Log Out"
        app:layout_constraintTop_toBottomOf="@id/btn_update"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>